@model CSDLVanHoaDuLichSonLa.Models.ViewPermissionViewModel
@{
	ViewBag.Title = "Chi tiết giải thưởng";
}

<div class="box_content">
	<div class="TieuDe">
		<h2 id="pageTitle">Chi tiết giải thưởng</h2>
	</div>
	<div class="content-body">
		<input type="hidden" id="giaiThuongId" value="@ViewBag.GiaiThuongId" />
		<!-- Thông tin cơ bản -->
		<div class="row">
			<div class="col-lg-6 col-md-6">
				<div class="form-group form-info">
					<label>Tác phẩm:</label>
					<span id="tacPham" class="text-bold">-</span>
				</div>
				<div class="form-group form-info">
					<label>Hạng mục giải thưởng:</label>
					<span id="hangMucGiaiThuong" class="text-bold">-</span>
				</div>
				<div class="form-group form-info">
					<label>Năm trao giải:</label>
					<span id="namTraoGiai">-</span>
				</div>
			</div>
			<div class="col-lg-6 col-md-6">
				<div class="form-group form-info">
					<label>Thứ tự:</label>
					<span id="thuTu">-</span>
				</div>
				<div class="form-group form-info">
					<label>Trạng thái:</label>
					<span id="trangThai">-</span>
				</div>
			</div>
			<div class="col-lg-12 col-md-12">
				<div class="form-group form-info">
					<label>Mô tả:</label>
					<span id="moTa">-</span>
				</div>
			</div>
		</div>

		<!-- Thông tin người tạo/cập nhật -->
		<div class="sub-text">
			<ul class="list-updater">
				<li>Người tạo: <span id="nguoiTao">-</span></li>
				<li>Ngày tạo: <span id="ngayTao">-</span></li>
				<li>Người cập nhật: <span id="nguoiCapNhat">-</span></li>
				<li>Ngày cập nhật: <span id="ngayCapNhat">-</span></li>
			</ul>
		</div>

		<!-- Bảng tổ chức đạt giải -->
		<div class="New_Table table-responsive mt-4">
			<div class="group-corner-button with-title">
				<h4>Danh sách tổ chức đạt giải</h4>
			</div>
			<table class="table row-border" id="tableToChuc" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>Stt</th>
						<th>Tên tổ chức</th>
						<th>Mã tổ chức</th>
					</tr>
				</thead>
				<tbody>
				</tbody>
			</table>
		</div>
		<!-- Bảng cá nhân đạt giải -->
		<div class="New_Table table-responsive mt-4">
			<div class="group-corner-button with-title">
				<h4>Danh sách cá nhân đạt giải</h4>
			</div>
			<table class="table row-border" id="tableCaNhan" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>Stt</th>
						<th>Tên cá nhân</th>
						<th>Mã định danh</th>
						<th>Chức vụ</th>
					</tr>
				</thead>
				<tbody>
				</tbody>
			</table>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		const giaiThuongId = '@ViewBag.GiaiThuongId';
	</script>
	<script src="~/PageScripts/admin/GiaiThuong/Details.js" asp-append-version="true"></script>
}
