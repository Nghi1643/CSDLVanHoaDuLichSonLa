@model CSDLVanHoaDuLichSonLa.Models.ViewPermissionViewModel
@{
    ViewBag.Title = "Chi tiết liên đoàn thể thao";
}

<div class="box_content">
    <div class="TieuDe">
        <h2 id="pageTitle">Chi tiết liên đoàn thể thao</h2>
    </div>
    
    <div class="content-body">
        <input type="hidden" id="coQuanId" value="@ViewBag.CoQuanId" />
        
        <!-- Thông tin cơ bản -->
        <div class="row">
            <!-- Cột trái -->
            <div class="col-lg-6 col-md-6">
                <div class="form-group form-info">
                    <label>Môn quản lý:</label>
                    <span id="loaiHinh">-</span>
                </div>
                <!-- <div class="form-group form-info">
                    <label>Cơ quan chủ quản:</label>
                    <span id="coQuanChuQuan" class="text-bold">Bộ Văn hóa Thể thao</span>
                </div>
                <div class="form-group form-info">
                    <label>Phạm vi hoạt động:</label>
                    <span id="phamViHoatDong">Toàn quốc</span>
                </div> -->
                <div class="form-group form-info">
                    <label>Ngày thành lập:</label>
                    <span id="ngayThanhLap" class="text-bold">-</span>
                </div>
                <div class="form-group form-info">
                    <label>Số giấy phép:</label>
                    <span id="soGiayPhep" class="text-bold">-</span>
                </div>
                <!-- <div class="form-group form-info">
                    <label>Quy mô:</label>
                    <span id="quyMo">-</span>
                </div> -->
                <div class="form-group form-info">
                    <label>Thứ tự:</label>
                    <span id="thuTu">1</span>
                </div>
            </div>
            
            <!-- Cột phải -->
            <div class="col-lg-6 col-md-6">
                <div class="form-group form-info">
                    <label>Số điện thoại:</label>
                    <span id="soDienThoai" class="text-bold">-</span>
                </div>
                <div class="form-group form-info">
                    <label>Hộp thư:</label>
                    <span id="hopThu" class="blue-text">-</span>
                </div>
                <div class="form-group form-info">
                    <label>Website:</label>
                    <span id="website" class="blue-text">-</span>
                </div>
                <div class="form-group form-info">
                    <label>Trạng thái:</label>
                    <span id="trangThai" class="text-bold">-</span>
                </div>
            </div>

            <div class="col-lg-12 col-md-12">
                <div class="form-group form-info">
                    <label>Địa chỉ:</label>
                    <span id="diaChiDich">-</span>
                </div>
                <div class="form-group form-info">
                    <label>Giới thiệu:</label>
                    <span id="gioiThieuDich">-</span>
                </div>
                <div class="form-group form-info">
                    <label>Ghi chú:</label>
                    <span id="ghiChuDich">-</span>
                </div>
            </div>
        </div>

        <!-- Thông tin người tạo/cập nhật -->
        <div class="sub-text">
            <ul class="list-updater">
                <li>Người tạo: <span id="nguoiTao">-</span></li>
                <li>Ngày tạo: <span id="ngayTao">-</span></li>
                <li>Người cập nhật: <span id="nguoiCapNhat">-</span></li>
                <li>Ngày cập nhật:<span id="ngayCapNhat">-</span></li>
            </ul>
        </div>

        <!-- Bảng giải thưởng/danh hiệu -->
        <div class="New_Table table-responsive">
            <div class="group-corner-button with-title">
                <h4>Danh sách giải thưởng/danh hiệu</h4>
            </div>
            <table class="table row-border" id="tableAnPham" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên ấn phẩm</th>
                        <th>Tần suất</th>
                        <th>Lĩnh vực chuyên sâu</th>
                        <th>Lượt tiếp cận ước tính</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const coQuanId = '@ViewBag.CoQuanId';
    </script>
    <script src="~/PageScripts/admin/ToChuc/LienDoan/Details.js" asp-append-version="true"></script>
}
