@model CSDLVanHoaDuLichSonLa.Models.ViewPermissionViewModel
@{
    ViewBag.Title = "Quản lý ấn phẩm xuất bản";
}

<div class="box_content">
    <div class="TieuDe">
        <h2>Quản lý ấn phẩm xuất bản</h2>
    </div>
    <div class="content-body">
        <div class="group-filter">
            <div class="row">
                <div class="col-md-6 col-lg-3 form-group">
                    <label>Từ khoá</label>
                    <input type="text" class="form-control search-icon" id="tu-khoa-search" placeholder="Tìm kiếm..." maxlength="1000" />
                </div>
                <div class="col-md-6 col-lg-3 form-group">
                    <label>Thể loại</label>
                    <select class="form-control" id="the-loai-search" placeholder="Thể loại"></select>
                </div>
                <div class="col-md-6 col-lg-3 form-group">
                    <label>Trạng thái</label>
                    <select class="form-control" id="trang-thai-search" placeholder="Trạng thái">
                        <option value="-1">Tất cả</option>
                        <option value="0">Không sử dụng</option>
                        <option value="1">Sử dụng</option>
                    </select>
                </div>
                <div class="col-md-6 col-lg-3">
                    <label>&nbsp;</label>
                    <div class="group-button flex-end">
                        <button type="button" class="btn btn-primary" id="tim-kiem">Lọc</button>
                        <button type="button" class="btn btn-outline-primary" id="tat-ca">Tất cả</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="New_Table table-responsive">
            <div class="group-corner-button">
                @if (Model.PermitedCreate == 1)
                {
                    <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#modalAdd">Thêm mới</button>
                }
            </div>
            <table class="table row-border" id="dataGrid" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên ấn phẩm</th>
                        <th>Thể loại</th>
                        <th>Năm xuất bản</th>
                        <th>Ngày cập nhật</th>
                        <th>Giá bìa</th>
                        <th>Trạng thái</th>
                        @if (Model.PermitedEdit > 0 || Model.PermitedDelete > 0)
                        {
                            <th>Chức năng</th>
                        }
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <!-- Modal Thêm/Sửa Ấn phẩm/Xuất bản -->
    <div class="modal side-modal fade" id="modalAdd" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="modalAddTitle">Thêm mới ấn phẩm</h4>
                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                </div>
                <form role="form" id="formAdd">
                    <div class="modal-body">
                        <input type="hidden" id="idAnPhamAdd" />
                        <div class="row">
                            <div class="col-lg-3 col-md-6 form-group">
                                <label for="anhBiaAdd" class="form-label">Ảnh bìa</label>
                                <div class="group_image_input">
                                    <input type="file" id="anhBiaAdd" accept="image/*"/>
                                    <label for="anhBiaAdd">
                                        <img id="showAnhBiaAdd" width="125" height="125" src="/assets/images/vector/addImage.png">
                                    </label>
                                </div>
                            </div>
    
                            <div class="col-lg-9 col-md-12 form-group">
                                <div class="row">
                                    <div class="form-group col-lg-6 col-md-12">
                                        <label for="maDinhDanhAdd" class="form-label">Mã định danh</label>
                                        <input type="text" class="form-control field-input" id="maDinhDanhAdd" placeholder="Nhập mã định danh..." autocomplete="off" />
                                    </div>
        
                                    <div class="form-group col-lg-6 col-md-12">
                                        <label for="maQuocTeAdd" class="form-label">Mã quốc tế</label>
                                        <input type="text" class="form-control field-input" id="maQuocTeAdd" placeholder="Nhập mã quốc tế..." autocomplete="off" />
                                    </div>
        
                                    <div class="form-group col-lg-6 col-md-12">
                                        <label for="nhaXuatBanAdd" class="form-label">Nhà xuất bản</label>
                                        <select id="nhaXuatBanAdd" class="form-control"></select>
                                    </div>
        
                                    <div class="form-group col-lg-6 col-md-12">
                                        <label for="theLoaiAdd" class="form-label">Thể loại</label>
                                        <select id="theLoaiAdd" class="form-control"></select>
                                    </div>
                                </div>
                            </div>
    
                            <div class="form-group col-lg-6 col-md-12">
                                <label for="namXuatBanAdd" class="form-label">Năm xuất bản</label>
                                <input type="number" class="form-control field-input" id="namXuatBanAdd" placeholder="Nhập năm xuất bản..." autocomplete="off" />
                            </div>
    
                            <div class="form-group col-lg-6 col-md-12">
                                <label for="soLanTaiBanAdd" class="form-label">Số lần tái bản</label>
                                <input type="number" class="form-control field-input" id="soLanTaiBanAdd" placeholder="Nhập số lần tái bản..." autocomplete="off" />
                            </div>
    
                            <div class="form-group col-lg-6 col-md-12">
                                <label for="soLuongInAdd" class="form-label">Số lượng in</label>
                                <input type="number" class="form-control field-input" id="soLuongInAdd" placeholder="Nhập số lượng in..." autocomplete="off" />
                            </div>
    
                            <div class="form-group col-lg-6 col-md-12">
                                <label for="giaBiaAdd" class="form-label">Giá bìa</label>
                                <input type="number" class="form-control field-input" id="giaBiaAdd" placeholder="Nhập giá bìa..." autocomplete="off" />
                            </div>
    
                            <div class="form-group col-md-12">
                                <label class="form-label">Trạng thái</label>
                                <div class="div_radiobox">
                                    <div class="groupradiobox">
                                        <input type="radio" id="trangThaiSuDungAdd" name="trangThaiAdd" value="1" checked />
                                        <label for="trangThaiSuDungAdd">Đã phát hành</label>
                                    </div>
                                    <div class="groupradiobox">
                                        <input type="radio" id="trangThaiKhongSuDungAdd" name="trangThaiAdd" value="0" />
                                        <label for="trangThaiKhongSuDungAdd">Chưa phát hành</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="DaNgu">
                            <div class="form-group">
                                <label for="ngonNguAdd" class="form-label">Ngôn ngữ<span class="text-red"> *</span></label>
                                <select id="ngonNguAdd" class="form-control" placeholder="Chọn ngôn ngữ"></select>
                            </div>

                            <div class="form-group">
                                <label for="tenAnPhamAdd" class="form-label">Tên ấn phẩm<span class="text-red"> *</span></label>
                                <input type="text" class="form-control field-input" id="tenAnPhamAdd" placeholder="Nhập tên ấn phẩm..." autocomplete="off">
                            </div>

                            <div class="form-group">
                                <label for="tacGiaAdd" class="form-label">Tác giả<span class="text-red"> *</span></label>
                                <input type="text" class="form-control field-input" id="tacGiaAdd" placeholder="Nhập tên tác giả..." autocomplete="off">
                            </div>

                            <div class="form-group">
                                <label for="moTaAdd" class="form-label">Mô tả</label>
                                <textarea class="form-control field-input" id="moTaAdd" placeholder="Nhập mô tả..." autocomplete="off"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Huỷ bỏ</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div><!-- modal-content -->
        </div><!-- modal-dialog -->
    </div><!-- modal -->
    <!-- Modal delete-->
    @await Html.PartialAsync("~/Areas/AdminTool/Views/Shared/_PartialView/ModalDelete.cshtml")
</div>

@section Scripts {
    <script>
        const permitedEdit = @Model.PermitedEdit;
        const permitedDelete = @Model.PermitedDelete;
        const nhaXuatBanID = '@ViewBag.nhaXuatBanID';
    </script>
    <script src="~/PageScripts/admin/XuatBan/NhaXuatBan/AnPhamXuatBan.js" asp-append-version="true"></script>
}