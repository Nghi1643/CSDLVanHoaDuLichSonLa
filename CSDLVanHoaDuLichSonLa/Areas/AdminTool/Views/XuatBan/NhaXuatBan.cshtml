@model CSDLVanHoaDuLichSonLa.Models.ViewPermissionViewModel
@{
    ViewBag.Title = "Quản lý nhà xuất bản";
}

<div class="box_content">
    <div class="TieuDe">
        <h2>Quản lý nhà xuất bản</h2>
    </div>
    <div class="content-body">
        <div class="group-filter" style="margin-bottom:10px;">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Tìm kiếm</label>
                        <input type="text" class="form-control search-icon" id="tu-khoa-search" placeholder="Nhập từ khóa..." maxlength="1000" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Lĩnh vực xuất bản</label>
                        <select class="form-control" id="loai-hinh-search" data-placeholder="Chọn lĩnh vực xuất bản">
                            <option value="-1">Tất cả</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Cơ quan chủ quản</label>
                        <select class="form-control" id="co-quan-chu-quan-search">
                            <option value="-1">Tất cả</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Trạng thái</label>
                        <select class="form-control" id="trang-thai-search" data-placeholder="Chọn trạng thái">
                            <option value="-1">Tất cả</option>
                            <option value="1">Duyệt</option>
                            <option value="2">Chưa duyệt</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Ngôn ngữ</label>
                        <select class="form-control" id="ngon-ngu-search" data-placeholder="Chọn ngôn ngữ">
                            <option value="-1">Tất cả</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <div class="group-button flex-end">
                            <button type="button" class="btn btn-primary" id="tim-kiem">Lọc</button>
                            <button type="button" class="btn btn-outline-primary" id="tat-ca">Tất cả</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="New_Table table-responsive">
            <div class="group-corner-button">
                @if (Model.PermitedCreate == 1)
                {
                    <a href="@Url.Action("Add", "XuatBan")" class="btn btn-success">Thêm mới</a>
                }
            </div>
            <table class="table row-border" id="dataGrid" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên nhà xuất bản</th>
                        <th>Lĩnh vực xuất bản</th>
                        <th>Cơ quan chủ quản</th>
                        <th>Số lượng cán bộ</th>
                        <th>Ấn phẩm/Xuất bản</th>
                        <th>Trạng thái</th>
                        @if (Model.PermitedEdit > 0 || Model.PermitedDelete > 0)
                        {
                            <th>Chức năng</th>
                        }
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <!-- Modal delete-->
    @await Html.PartialAsync("~/Areas/AdminTool/Views/Shared/_PartialView/ModalDelete.cshtml")
</div>

@section Scripts {
    <script>
        const permitedEdit = @Model.PermitedEdit;
        const permitedDelete = @Model.PermitedDelete;
    </script>
    <script src="~/PageScripts/admin/XuatBan/NhaXuatBan/NhaXuatBan.js" asp-append-version="true"></script>
}
