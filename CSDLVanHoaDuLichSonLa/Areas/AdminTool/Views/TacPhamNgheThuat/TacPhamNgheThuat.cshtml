@model CSDLVanHoaDuLichSonLa.Models.ViewPermissionViewModel
@{
    ViewBag.Title = "Quản lý tác phẩm nghệ thuật";
}

<div class="box_content">
    <div class="TieuDe">
        <h2>Quản lý tác phẩm nghệ thuật</h2>
    </div>

    <div class="content-body">
        <div class="group-filter">
            <div class="row">
                <div class="col-md-3 form-group">
                    <label>Tìm kiếm</label>
                    <input type="text" class="form-control search-icon" id="tu-khoa-search" placeholder="Nhập từ khóa tìm kiếm..." maxlength="1000" />
                </div>

                <div class="col-md-3 form-group">
                    <label>Loại hình tác phẩm</label>
                    <select class="form-control" id="loai-hinh-tac-pham-search">
                    </select>
                </div>

                <div class="col-md-3 form-group">
                    <label>Trạng thái</label>
                    <select class="form-control" id="trang-thai-search">
                        <option value="-1">Tất cả</option>
                        <option value="0">Không sử dụng</option>
                        <option value="1">Sử dụng</option>
                    </select>
                </div>

                <div class="col-md-3 form-group">
                    <label>Ngôn ngữ</label>
                    <select class="form-control" id="ngon-ngu-search"></select>
                </div>

                <div class="col-md-12">
                    <div class="group-button flex-end">
                        <button type="button" class="btn btn-primary" id="tim-kiem">Lọc</button>
                        <button type="button" class="btn btn-outline-primary" id="tat-ca">Tất cả</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="New_Table table-responsive">
            <div class="group-button space-between" style="margin-bottom:10px;">
                <div class="group-corner-button">
                    @if (Model.PermitedCreate > 0)
                    {
                        <a class="btn btn-success" asp-controller="TacPhamNgheThuat" asp-action="ThemMoi">Thêm mới</a>
                    }
                </div>
            </div>

            <table class="table row-border" id="dataGrid" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Stt</th>
                        <th>Tên tác phẩm</th>
                        <th>Loại hình tác phẩm</th>
                        <th>Tác giả</th>
                        <th>Thứ tự</th>
                        <th>Trạng thái</th>
                        @if (Model.PermitedEdit > 0 || Model.PermitedDelete > 0)
                        {
                            <th>Chức năng</th>
                        }
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- Modal Xem Chi Tiết -->
<div class="modal fade" id="modalDetail" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết di sản phi vật thể</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- Ảnh đại diện -->
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>Ảnh đại diện</label>
                            <div>
                                <img id="anhDaiDienDetail" src="/images/no-image.png" alt="Ảnh đại diện" class="img-thumbnail" style="max-width: 150px;">
                            </div>
                        </div>
                    </div>

                    <!-- Mã định danh -->
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>Mã định danh</label>
                            <p id="maDinhDanhDetail" class="form-control-plaintext"></p>
                        </div>
                    </div>

                    <!-- Loại hình -->
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>Loại hình</label>
                            <p id="loaiHinhIDDetail" class="form-control-plaintext"></p>
                        </div>
                    </div>

                    <!-- Tình trạng -->
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>Tình trạng</label>
                            <p id="tinhTrangIDDetail" class="form-control-plaintext"></p>
                        </div>
                    </div>

                    <!-- Thứ tự -->
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>Thứ tự</label>
                            <p id="thuTuDetail" class="form-control-plaintext"></p>
                        </div>
                    </div>

                    <!-- Trạng thái sử dụng -->
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>Trạng thái sử dụng</label>
                            <p id="suDungDetail" class="form-control-plaintext"></p>
                        </div>
                    </div>

                    <!-- Phần thông tin đa ngữ -->
                    <div class="col-12">
                        <hr />
                        <h6>Thông tin chi tiết</h6>
                    </div>

                    <!-- Tên di sản -->
                    <div class="col-12">
                        <div class="form-group">
                            <label>Tên di sản</label>
                            <p id="tenDiSanDetail" class="form-control-plaintext"></p>
                        </div>
                    </div>

                    <!-- Cộng đồng -->
                    <div class="col-12">
                        <div class="form-group">
                            <label>Cộng đồng</label>
                            <p id="congDongDetail" class="form-control-plaintext"></p>
                        </div>
                    </div>

                    <!-- Tình trạng bảo tồn -->
                    <div class="col-12">
                        <div class="form-group">
                            <label>Tình trạng bảo tồn</label>
                            <p id="tinhTrangDetail" class="form-control-plaintext"></p>
                        </div>
                    </div>

                    <!-- Mô tả -->
                    <div class="col-12">
                        <div class="form-group">
                            <label>Mô tả</label>
                            <p id="moTaDetail" class="form-control-plaintext"></p>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal delete -->
@await Html.PartialAsync("~/Areas/AdminTool/Views/Shared/_PartialView/ModalDelete.cshtml")

@section Scripts {
    <script>
        const permitedEdit = @Model.PermitedEdit
        const permitedDelete = @Model.PermitedDelete
    </script>
    <script src="~/PageScripts/admin/VanHoa/TacPhamNgheThuat.js" asp-append-version="true"></script>
}
