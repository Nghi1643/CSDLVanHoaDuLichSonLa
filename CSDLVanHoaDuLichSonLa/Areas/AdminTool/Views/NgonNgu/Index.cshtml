@model CSDLVanHoaDuLichSonLa.Models.ViewPermissionViewModel
@{
    ViewBag.Title = "Quản lý ngôn ngữ";
}

<div class="box_content">
    <div class="TieuDe">
        <h2>Quản lý ngôn ngữ</h2>
    </div>
    <div class="content-body">
        <div class="group-button space-between" style="margin-bottom:10px;">
            <input type="text" class="form-control search-icon" id="tu-khoa-search" placeholder="Nhập từ khóa..." maxlength="1000" style="width: 350px;"/>
            <div class="group-corner-button">
                @if (Model.PermitedCreate == 1)
                {
                    <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#modalAdd">Thêm mới</button>
                }
            </div>
        </div>
        <div class="New_Table table-responsive">
            <table class="table row-border" id="dataGrid" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Ngôn Ngữ</th>
                        <th>Mã ngôn ngữ</th>
                        <th>Thứ tự</th>
                        <th>Trạng Thái</th>
                        @if (Model.PermitedEdit > 0 || Model.PermitedDelete > 0)
                        {
                            <th>Chức năng</th>
                        }
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <!-- Modal add-->
    <div class="modal side-modal fade" id="modalAdd" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Thêm mới</h4>
                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form role="form" id="formAdd">
                        <input type="text" hidden id="idNgonNgu" />
                        <div class="form-group">
                            <label for="maNgonNguAdd" class="form-label">Mã ngôn ngữ<span class="text-red"> *</span></label>
                            <input type="text" class="form-control field-input" id="maNgonNguAdd" placeholder="Nhập mã ngôn ngữ" maxlength="4" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label for="tenNgonNguAdd" class="form-label">Tên ngôn ngữ<span class="text-red"> *</span></label>
                            <input type="text" class="form-control field-input" id="tenNgonNguAdd" placeholder="Nhập tên ngôn ngữ" autocomplete="off">
                        </div>

                        <div class="form-group">
                            <label for="trangThaiAdd" class="form-label">Ngôn ngữ<span class="text-red"> *</span></label>
                            <div class="div_radiobox">
                                <div class="groupradiobox">
                                    <input type="radio" id="html" name="trangThaiAdd" value="1" checked />
                                    <label for="html">Sử dụng</label>
                                </div>
                                <div class="groupradiobox">
                                    <input type="radio" id="css" name="trangThaiAdd" value="0" />
                                    <label for="css">Không sử dụng</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="thuTuAdd" class="form-label">Thứ tự</label>
                            <input type="number" class="form-control field-input" id="thuTuAdd" value="0" row autocomplete="off" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Hủy bỏ</button>
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </form>
                </div>


            </div><!-- modal-content -->
        </div><!-- modal-dialog -->
    </div><!-- modal -->
    
    <!-- Modal delete-->
    @await Html.PartialAsync("~/Areas/AdminTool/Views/Shared/_PartialView/ModalDelete.cshtml")
</div>

@section Scripts {
    <script>
        const permitedEdit = @Model.PermitedEdit
        const permitedDelete = @Model.PermitedDelete
    </script>
    <script src="~/PageScripts/admin/DanhMuc/NgonNgu.js" asp-append-version="true"></script>
}