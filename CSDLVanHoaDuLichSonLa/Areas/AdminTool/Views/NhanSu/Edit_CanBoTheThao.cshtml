            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="group-button flex-end">
                            <a href="@Url.Action("CanBoTheThao", "NhanSu")" class="btn btn-outline-primary">Hủy bỏ</a>
                            <button type="submit" class="btn btn-primary" id="btnSaveEdit">Lưu</button>
                        </div>
                    </div>
                </div>
            </div>
