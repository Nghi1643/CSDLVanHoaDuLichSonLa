    <div class="content-body">
        <form id="formNhanSuEdit">
            <div class="row">
                <div class="col-lg-auto col-md-6" id="fileAnhDaiDien">
                    <label for="AnhDaiDienEdit" class="form-label">Ảnh đại diện <span class="text-danger">*</span></label>
                    <div class="group_image_input">
                        <input id="showAnhDaiDienDetail" type="hidden">
                        <input id="fileAnhDaiDienPrev" type="file" accept=".jpg,.jpeg,.png,.gif,.webp,.bmp">
                        <label for="fileAnhDaiDienPrev">
                            <img id="showAnhDaiDienEdit" width="125" height="125" src="/assets/images/vector/AddImage.png">
                        </label>
                    </div>
                </div>
                <div class="col-lg col-md-12">
                    <div class="row">
                        <div class="form-group col-lg-3 col-md-6">
                            <label for="maDinhDanhEdit">Mã định danh (CCCD/Hộ chiếu) <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="maDinhDanhEdit" placeholder="Nhập mã định danh (CCCD/Hộ chiếu)" />
                        </div>
                        <div class="form-group col-lg-3 col-md-6">
                            <label>Giới tính<span class="text-danger">*</span></label>
                            <select class="form-control" id="gioiTinhEdit">
