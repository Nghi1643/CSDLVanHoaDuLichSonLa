            var $textarea = $('<textarea></textarea>').val(svgHTML);
            // Thêm textarea vào document
            $('body').append($textarea);
            // Chọn nội dung của textarea
            $textarea.select();
            // Sao chép nội dung đã chọn vào clipboard
